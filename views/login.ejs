<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Fruit Store — Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <div class="container py-5">
      <div class="text-center mb-4">
        <h1 class="display-5">Welcome to Fruit Store</h1>
        <p class="text-muted">Please sign in to continue</p>
      </div>

      <% if (error) { %>
        <div class="alert alert-danger text-center"> <%= error %> </div>
      <% } %>

      <!-- Trigger modal (we'll open on load) -->
      <div class="d-flex justify-content-center">
        <button id="openLogin" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#loginModal">Login</button>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="loginModalLabel">Sign in to Fruit Store</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" action="/login">
              <div class="modal-body">
                <div class="mb-3">
                  <label for="email" class="form-label">Email address</label>
                  <input type="email" class="form-control" id="email" name="email" placeholder="customer@fruitsstore.com" required>
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                </div>
                <p class="small text-muted">Use <strong>customer@fruitsstore.com</strong> / <strong>test</strong></p>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-success">Login</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <footer class="mt-5 text-center text-muted small">Fruit Store demo — simple EJS site</footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // show modal automatically when landing on login
      const loginModal = new bootstrap.Modal(document.getElementById('loginModal'))
      window.addEventListener('load', () => {
        loginModal.show()
      })
    </script>
  </body>
</html>
