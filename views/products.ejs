<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Fruit Store â€” Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <style>
      /* small override to ensure grid scrolls when needed */
      .products-grid { max-height: 70vh; overflow:auto; }
    </style>
  </head>
  <body>
    <%- include('partials/nav') %>

    <main class="container mb-5">
      <h2 class="mb-3">Products</h2>

      <% if (!images || images.length === 0) { %>
        <div class="alert alert-info">No products found. Use "Add Product" to upload images into the <code>/public/images</code> folder.</div>
      <% } %>

      <div class="products-grid">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
          <% images.forEach(function(image){ %>
            <div class="col">
              <div class="card h-100 shadow-sm">
                <img src="/images/<%= encodeURIComponent(image) %>" class="card-img-top product-img" alt="<%= image %>">
                <div class="card-body">
                  <p class="card-text text-truncate"><%= image %></p>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>

    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
